<h1>Trash</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
            </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                </td>
            </tr>
            </tbody>
            {{/each}}
        </table>
        <p>
            <strong>Price:</strong>
            <span class="price">{{price}}</span>
        </p>
    {{else}}
        <p>Trash empty</p>
    {{/if}}
</div>
